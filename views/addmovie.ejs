<%- include("layout") %>
<section>
  <h2>Add a New Movie</h2>
  <form action="/movies" method="POST">
    <label for="title">Title</label>
    <input type="text" name="movie[title]" required>
    <label for="genre">Genre</label>
    <input type="text" name="movie[genre]" required>
    <label for="year">Year</label>
    <input type="number" name="movie[year]" required>
    <label for="status">Status</label>
    <select name="movie[status]">
      <option value="Want to Watch">Unwatched</option>
      <option value="Watching">In Progress</option>
      <option value="Watched">Watched</option>
    </select>
    <button type="submit" class="btn">Add Movie</button>
  </form>
</section>
