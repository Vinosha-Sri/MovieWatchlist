<%- include('../partials/header') %> 
<!-- Includes the shared header. -->
<!-- Content for the Add/Edit Movie Page -->
<div class="container">
  <!-- Bootstrap container class for responsive layout -->
  <div class="row">
    <!-- Bootstrap row for layout structure -->
    <div class="offset-md-3 col-md-6">
      <!-- Centers the form on medium-sized screens -->
      <h1><%= title %></h1>
      <!-- Displays the page title dynamically passed from the server. -->
      <form class="form" method="POST">
        <!-- Form element with post method to send data to the server. -->
        <div class="form-group">
          <!-- Forms group for spacing and alignment. -->
          <label for="titleTextField">Movie Title</label>
          <!-- Label for the title input field. -->
          <input 
            type="text" 
            class="form-control"
            id="titleTextField"
            placeholder="Enter the Movie Title"
            name="title"
            value="<%= Movie.title %>" 
            required
          >
          <!-- Input field to enter the movie title, with the existing title pre-filled. -->
        </div>
        <div class="form-group">
          <label for="genreTextField">Genre</label>
          <!-- Label for the genre input field. -->
          <input 
            type="text" 
            class="form-control"
            id="genreTextField"
            placeholder="Enter the Genre of the Movie"
            name="genre"
            value="<%= Movie.genre %>" 
            required
          >
          <!-- Input field to enter the movie genre, with the existing genre pre-filled. -->
        </div>
        <div class="form-group">
          <label for="yearTextField">Release Year</label>
          <!-- Label for the release year input field. -->
          <input 
            type="number" 
            class="form-control"
            id="yearTextField"
            placeholder="Enter the Release Year"
            name="year"
            value="<%= Movie.year %>" 
            required
          >
          <!-- Input field to enter the movie's release year, with the existing year pre-filled. -->
        </div>

        <div class="form-group">
          <label for="statusSelect">Status</label>
          <!-- Label for the status dropdown -->
          <select 
            class="form-control" 
            id="statusSelect" 
            name="status" 
            required
          >
            <!-- Dropdown menu for selecting the movie's status -->
            <option 
              value="Watched" 
              <%= Movie.status === "Watched" ? "selected" : "" %>
            >
              Watched
            </option>
            <!-- Option for "Watched," pre-selected if the movie's status is "Watched" -->
            <option 
              value="Not Watched" 
              <%= Movie.status === "Not Watched" ? "selected" : "" %>
            >
              Not Watched
            </option>
            <!-- Option for "Not Watched," pre-selected if the movie's status is "Not Watched" -->
          </select>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <!-- Submit button to save the movie -->
        <a href="/movies" class="btn btn-warning">Cancel</a>
        <!-- Link to navigate back to the movie list without saving changes -->
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %> 
<!-- Includes the shared footer. -->
