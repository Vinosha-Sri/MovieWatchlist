<%- include("layout") %>
<section>
  <h2>Edit Movie</h2>
  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" name="movie[title]" value="<%= movie.title %>" required>
    <label for="genre">Genre</label>
    <input type="text" name="movie[genre]" value="<%= movie.genre %>" required>
    <label for="year">Year</label>
    <input type="number" name="movie[year]" value="<%= movie.year %>" required>
    <label for="status">Status</label>
    <select name="movie[status]">
      <option value="Unwatched" <%= movie.status === "Uhwatched" ? "selected" : "" %>>Unwatched</option>
      <option value="In Progress" <%= movie.status === "In Progress" ? "selected" : "" %>>In Progress</option>
      <option value="Watched" <%= movie.status === "Watched" ? "selected" : "" %>>Watched</option>
    </select>
    <button type="submit" class="btn">Update Movie</button>
  </form>
</section>
